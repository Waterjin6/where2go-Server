<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="?actionBarSize"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/mypage_profile_iv"
            android:layout_width="61dp"
            android:layout_height="61dp"
            android:layout_marginTop="22dp"
            android:layout_marginStart="43dp"
            android:src="@drawable/mypage_profile_img"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
        <TextView
            android:id="@+id/mypage_nickname_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="21dp"
            android:layout_marginTop="29dp"
            android:textSize="15sp"
            android:text="닉네임 님"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/mypage_profile_iv"/>
        <ImageView
            android:layout_width="15dp"
            android:layout_height="17dp"
            android:layout_marginTop="29dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/mypage_more_btn"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/mypage_nickname_tv"/>
        <TextView
            android:id="@+id/mypage_email_tv"
            android:layout_width="wrap_content"
            android:layout_height="13dp"
            android:layout_marginStart="21dp"
            android:layout_marginTop="5dp"
            android:textSize="11sp"
            android:text="email@gmail.com"
            app:layout_constraintTop_toBottomOf="@id/mypage_nickname_tv"
            app:layout_constraintStart_toEndOf="@id/mypage_profile_iv"/>
        <TextView
            android:id="@+id/mypage_like_explain_tv"
            android:layout_width="147dp"
            android:layout_height="17dp"
            android:text="내가 찜한 행사들이에요."
            android:layout_marginTop="76dp"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mypage_email_tv"/>
<!--        <com.google.android.material.tabs.TabLayout-->
<!--            android:id="@+id/home_tab_layout"-->
<!--            android:layout_width="80dp"-->
<!--            android:layout_height="10dp"-->
<!--            android:layout_marginTop="19dp"-->
<!--            app:tabBackground="@drawable/home_tab_selector"-->
<!--            app:tabIndicatorHeight="0dp"-->
<!--            app:tabPaddingStart="5dp"-->
<!--            android:background="@color/transparent"-->
<!--            app:layout_constraintTop_toBottomOf="@id/home_banner_vp"-->
<!--            app:layout_constraintStart_toStartOf="parent"-->
<!--            app:layout_constraintEnd_toEndOf="parent"/>-->

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/mypage_vp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/mypage_like_explain_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>



    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>