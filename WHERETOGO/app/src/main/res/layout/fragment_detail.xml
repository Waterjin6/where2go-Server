<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.detail.DetailFragment">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/detail_banner_vp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/detail_tab_layout"
        android:layout_width="80dp"
        android:layout_height="10dp"
        android:layout_marginTop="15dp"
        app:tabBackground="@drawable/home_tab_selector"
        app:tabIndicatorHeight="0dp"
        app:tabPaddingStart="5dp"
        android:background="@color/transparent"
        app:layout_constraintTop_toBottomOf="@id/detail_banner_vp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <View
        android:id="@+id/detail_line"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/gray"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/detail_tab_layout"
        app:layout_constraintStart_toStartOf="parent"/>
    <LinearLayout
        android:id="@+id/detail_tags"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/detail_line"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="#역사"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:background="@drawable/detail_tag_border"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="#조선시대"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_marginStart="8dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:background="@drawable/detail_tag_border"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="#지금_인기있는"
            android:paddingStart="8dp"
            android:paddingEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:background="@drawable/detail_tag_border"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/detail_event_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2022 궁중 문화축전"
        app:layout_constraintTop_toBottomOf="@id/detail_tags"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="27sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="11dp"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/detail_event_check_btn"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/btn_check_click"
        app:layout_constraintTop_toBottomOf="@+id/detail_tags"
        app:layout_constraintStart_toEndOf="@+id/detail_event_title"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/btn_like_click"
        app:layout_constraintTop_toBottomOf="@+id/detail_tags"
        app:layout_constraintStart_toEndOf="@+id/detail_event_check_btn"/>

    



</androidx.constraintlayout.widget.ConstraintLayout>