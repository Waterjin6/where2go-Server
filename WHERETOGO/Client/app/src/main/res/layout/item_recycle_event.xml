<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical"
    android:background="@drawable/search_event_banner_background"

    android:padding="10dp"
    android:layout_marginTop="10dp">

    <LinearLayout
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <View
                    android:id="@+id/view3"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/hashtag1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"

                    android:text="#바다"
                    android:textSize="5pt"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/hashtag2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"

                    android:text="#불꽃놀이"
                    android:textSize="5pt"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/hashtag3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"

                    android:text="#20대가_좋아한"
                    android:textSize="5pt"
                    android:textColor="@color/white"
                    />
            </LinearLayout>


        </LinearLayout>

        <View
            android:id="@+id/view4"
            android:layout_width="0dp"
            android:layout_height="85dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"

            android:orientation="vertical">

            <TextView
                android:id="@+id/eventName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="축제명"
                android:textColor="@color/white"
                android:textSize="10pt"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/startDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="시작일"
                    android:textSize="6pt"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/connectDates"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="~"
                    android:textSize="6pt"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/endDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="종료일"
                    android:textSize="6pt"
                    android:textColor="@color/white"/>

            </LinearLayout>



        </LinearLayout>


        <View
            android:id="@+id/view10"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/visitedBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            tools:srcCompat="@drawable/btn_check_unclick"
            android:background="@color/transparent"
            android:scaleType="fitCenter"
            />

        <ImageButton
            android:id="@+id/likedBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/transparent"

            tools:srcCompat="@drawable/btn_like_unclick"
            android:scaleType="fitCenter"/>

    </LinearLayout>

</LinearLayout>