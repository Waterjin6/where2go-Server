<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_mypage_like_frame"
    android:layout_width="326dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp">
    <ImageView
        android:id="@+id/mypage_like_event_iv"
        android:layout_width="326dp"
        android:layout_height="165dp"
        android:scaleType="fitXY"
        android:src="@drawable/img_mypage_panel"
        android:background="@drawable/mypage_like_border"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <TextView
        android:id="@+id/item_mypage_like_count_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="@color/white"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/item_mypage_like_tag_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="@color/white"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:text="#지금_인기있는 #서울시 #자연"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/item_mypage_like_title_tv"
        android:layout_width="270dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="98dp"
        android:textSize="21sp"
        android:textColor="@color/white"
        android:text="포항국제불빛축제"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/item_mypage_like_start_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginStart="15dp"
        android:layout_marginTop="3dp"
        android:text="05/10~"
        app:layout_constraintTop_toBottomOf="@id/item_mypage_like_title_tv"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/item_mypage_like_end_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"

        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@id/item_mypage_like_title_tv"
        app:layout_constraintStart_toEndOf="@id/item_mypage_like_start_date_tv"
        />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_mypage_like_visited_btn"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginTop="3dp"
        android:layout_marginStart="250dp"
        android:src="@drawable/btn_check_click"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_mypage_like_title_tv"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_mypage_like_unvisited_btn"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginTop="3dp"
        android:layout_marginStart="250dp"
        android:visibility="invisible"
        android:src="@drawable/btn_check_unclick"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_mypage_like_title_tv"/>


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_mypage_like_btn"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp"
        android:src="@drawable/btn_like_click"
        app:layout_constraintStart_toEndOf="@id/item_mypage_like_visited_btn"
        app:layout_constraintTop_toBottomOf="@id/item_mypage_like_title_tv"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_mypage_unlike_btn"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp"
        android:src="@drawable/btn_like_unclick"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@id/item_mypage_like_visited_btn"
        app:layout_constraintTop_toBottomOf="@id/item_mypage_like_title_tv"/>
</androidx.constraintlayout.widget.ConstraintLayout>