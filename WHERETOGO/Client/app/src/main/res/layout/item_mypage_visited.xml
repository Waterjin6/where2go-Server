<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_mypage_like_frame"
    android:layout_width="326dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp">
    <ImageView
        android:id="@+id/mypage_visited_event_iv"
        android:layout_width="326dp"
        android:layout_height="165dp"
        android:scaleType="fitXY"
        android:src="@drawable/img_mypage_panel"
        android:background="@drawable/mypage_like_border"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <ImageView
        android:id="@+id/item_visited_star1"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/mypage_star_on"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <ImageView
        android:id="@+id/item_visited_star2"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/mypage_star_off"
        android:layout_marginStart="3dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_visited_star1" />
    <ImageView
        android:id="@+id/item_visited_star3"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/mypage_star_off"
        android:layout_marginStart="3dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_visited_star2" />
    <TextView
        android:id="@+id/item_mypage_visited_count_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/item_visited_star1"
        app:layout_constraintStart_toStartOf="@id/item_visited_star1"/>
    <TextView
        android:id="@+id/item_mypage_visited_tag_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="@color/white"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/item_mypage_visited_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="98dp"
        android:textSize="21sp"
        android:textColor="@color/white"
        android:text="포항국제불빛축제"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/item_mypage_visited_start_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginStart="15dp"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@id/item_mypage_visited_title_tv"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/item_mypage_visited_end_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@id/item_mypage_visited_title_tv"
        app:layout_constraintStart_toEndOf="@id/item_mypage_visited_start_date"
        />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_mypage_visited_check_btn"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginTop="3dp"
        android:layout_marginStart="250dp"
        android:src="@drawable/btn_check_click"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_mypage_visited_title_tv"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_mypage_visited_uncheck_btn"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginTop="3dp"
        android:layout_marginStart="250dp"
        android:src="@drawable/btn_check_unclick"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_mypage_visited_title_tv"/>


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_mypage_visited_like_btn"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp"
        android:src="@drawable/btn_like_click"
        app:layout_constraintStart_toEndOf="@id/item_mypage_visited_check_btn"
        app:layout_constraintTop_toBottomOf="@id/item_mypage_visited_title_tv"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_mypage_visited_dislike_btn"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp"
        android:src="@drawable/btn_like_unclick"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@id/item_mypage_visited_check_btn"
        app:layout_constraintTop_toBottomOf="@id/item_mypage_visited_title_tv"/>


</androidx.constraintlayout.widget.ConstraintLayout>