<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/detail_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/detail_back_btn"
            android:layout_width="20dp"
            android:layout_height="15dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/img_guide_back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <View
            android:id="@+id/detail_line"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/gray"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/detail_back_btn"
            app:layout_constraintStart_toStartOf="parent"/>
        <LinearLayout
            android:id="@+id/detail_kind"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/detail_line"
            app:layout_constraintStart_toStartOf="parent">
            <TextView
                android:id="@+id/detail_kind_tv"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="#역사"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="2dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:background="@drawable/detail_tag_border"
                />


        </LinearLayout>

        <TextView
            android:id="@+id/detail_event_title"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="2022 궁중 문화축전"
            app:layout_constraintTop_toBottomOf="@id/detail_kind"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="21sp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="11dp"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/detail_event_check_btn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/btn_check_click"
            app:layout_constraintStart_toEndOf="@+id/detail_event_title"
            app:layout_constraintTop_toTopOf="@id/detail_line" />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/detail_event_uncheck_btn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/btn_check_unclick"
            android:visibility="invisible"
            app:layout_constraintStart_toEndOf="@+id/detail_event_title"
            app:layout_constraintTop_toTopOf="@id/detail_line" />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/detail_event_like_btn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/btn_like_click"
            app:layout_constraintTop_toTopOf="@id/detail_line"
            app:layout_constraintStart_toEndOf="@+id/detail_event_check_btn"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/detail_event_dislike_btn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="16dp"
            android:visibility="invisible"
            android:src="@drawable/btn_like_unclick"
            app:layout_constraintTop_toTopOf="@id/detail_line"
            app:layout_constraintStart_toEndOf="@+id/detail_event_check_btn"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/detail_event_title"
            app:layout_constraintStart_toStartOf="parent"
            android:orientation="vertical"
            android:layout_marginStart="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="25dp">
            <ImageView
                android:id="@+id/detail_event_place_iv"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/img_detail_place"/>

            <LinearLayout
                android:id="@+id/detail_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/detail_event_title"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="일시    "/>
                <TextView
                    android:id="@+id/detail_date_data_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="45dp"
                    app:layout_constraintTop_toBottomOf="@id/detail_event_title"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="2022-05-10 ~ "/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/detail_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/detail_event_start_date"
                    android:text="시간    "/>
                <TextView
                    android:id="@+id/detail_time_data_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="45dp"
                    app:layout_constraintTop_toBottomOf="@id/detail_event_start_date"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="프로그램별 상이"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/detail_event_place_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="장소    "/>
                <TextView
                    android:id="@+id/detail_place_data_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="45dp"
                    android:text="서울"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/detail_cost_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="비용    "/>
                <TextView
                    android:id="@+id/detail_cost_data_tv"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="45dp"
                    android:text="프로그램별 상이"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/detail_age_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="비용    "/>
                <TextView
                    android:id="@+id/detail_age_data_tv"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="45dp"
                    android:text="프로그램별 상이"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/detail_sponsor_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="후원사  "/>
                <TextView
                    android:id="@+id/detail_sponsor_data_tv"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:text="축제"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/detail_homepage_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="홈페이지"/>
                <TextView
                    android:id="@+id/detail_homepage_data_tv"
                    android:layout_marginStart="35dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="http://"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/detail_bookUrl_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="예매 사이트"/>
                <TextView
                    android:id="@+id/detail_bookUrl_data_tv"
                    android:layout_marginStart="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="dfsdf"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/detail_tel_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="전화번호  "/>
                <TextView
                    android:id="@+id/detail_tel_data_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:text="https://"/>
            </LinearLayout>
        </LinearLayout>




        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/detail_star_panel"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginEnd="40dp"
            android:layout_marginStart="40dp"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/detail_event_check_btn"
            android:background="@color/gray">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="50dp"
                >
                <ImageView
                    android:id="@+id/detail_edit_star1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/mypage_star_on" />
                <ImageView
                    android:id="@+id/detail_edit_star2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/mypage_star_off" />
                <ImageView
                    android:id="@+id/detail_edit_star3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/mypage_star_off"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/detail_adapt_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                app:layout_constraintEnd_toStartOf="@id/detail_cancel_tv"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="18dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="확인"/>
            <TextView
                android:id="@+id/detail_cancel_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:text="취소"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="18dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>