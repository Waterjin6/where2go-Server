<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/detail_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/detail_back_btn"
            android:layout_width="20dp"
            android:layout_height="15dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/img_guide_back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/detail_banner_vp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/detail_back_btn"
            />
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/detail_tab_layout"
            android:layout_width="80dp"
            android:layout_height="10dp"
            android:layout_marginTop="15dp"
            app:tabBackground="@drawable/home_tab_selector"
            app:tabIndicatorHeight="0dp"
            app:tabPaddingStart="5dp"
            android:background="@color/transparent"
            app:layout_constraintTop_toBottomOf="@id/detail_banner_vp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <View
            android:id="@+id/detail_line"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/gray"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/detail_tab_layout"
            app:layout_constraintStart_toStartOf="parent"/>
        <LinearLayout
            android:id="@+id/detail_tags"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/detail_line"
            app:layout_constraintStart_toStartOf="parent">
            <TextView
                android:id="@+id/detail_tag1_tv"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="#역사"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="2dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:background="@drawable/detail_tag_border"
                />

            <TextView
                android:id="@+id/detail_tag2_tv"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:paddingTop="2dp"
                android:background="@drawable/detail_tag_border"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="#조선시대"
                android:textAlignment="center"
                android:textColor="@color/white" />
            <TextView
                android:id="@+id/detail_tag3_tv"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:paddingTop="2dp"
                android:text="#지금_인기있는"
                android:paddingStart="8dp"
                android:paddingEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:background="@drawable/detail_tag_border"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/detail_event_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2022 궁중 문화축전"
            app:layout_constraintTop_toBottomOf="@id/detail_tags"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="27sp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="11dp"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/detail_event_check_btn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/btn_check_click"
            app:layout_constraintStart_toEndOf="@+id/detail_event_title"
            app:layout_constraintTop_toBottomOf="@+id/detail_tags" />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/detail_event_uncheck_btn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/btn_check_unclick"
            android:visibility="invisible"
            app:layout_constraintStart_toEndOf="@+id/detail_event_title"
            app:layout_constraintTop_toBottomOf="@+id/detail_tags" />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/detail_event_like_btn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/btn_like_click"
            app:layout_constraintTop_toBottomOf="@+id/detail_tags"
            app:layout_constraintStart_toEndOf="@+id/detail_event_check_btn"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/detail_event_dislike_btn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="16dp"
            android:visibility="invisible"
            android:src="@drawable/btn_like_unclick"
            app:layout_constraintTop_toBottomOf="@+id/detail_tags"
            app:layout_constraintStart_toEndOf="@+id/detail_event_check_btn"/>

        <TextView
            android:id="@+id/detail_event_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/detail_event_title"
            app:layout_constraintStart_toStartOf="parent"
            android:text="일시"/>
        <TextView
            android:id="@+id/detail_event_start_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/detail_event_title"
            app:layout_constraintStart_toStartOf="parent"
            android:text="2022-05-10 ~ "/>
        <TextView
            android:id="@+id/detail_event_end_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/detail_event_title"
            app:layout_constraintStart_toEndOf="@id/detail_event_start_date"
            android:text=""/>
        <TextView
            android:id="@+id/detail_event_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detail_event_start_date"
            android:text="시간"/>
        <TextView
            android:id="@+id/detail_event_time_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/detail_event_start_date"
            app:layout_constraintStart_toStartOf="parent"
            android:text="프로그램별 상이"/>
        <TextView
            android:id="@+id/detail_event_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/detail_event_time_data"
            android:text="장소"/>
        <TextView
            android:id="@+id/detail_event_place_data1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/detail_event_time_data"
            app:layout_constraintStart_toStartOf="parent"
            android:text="서울"/>
        <TextView
            android:id="@+id/detail_event_place_data2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/detail_event_place_data1"
            app:layout_constraintStart_toStartOf="parent"
            android:text="경복궁"/>
        <ImageView
            android:id="@+id/detail_event_place_iv"
            android:layout_width="191dp"
            android:layout_height="113dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/img_detail_place"
            app:layout_constraintTop_toBottomOf="@id/detail_event_place_data2"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/detail_event_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/detail_event_place_iv"
            android:text="비용"/>
        <TextView
            android:id="@+id/detail_event_cost_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/detail_event_place_iv"
            app:layout_constraintStart_toStartOf="parent"
            android:text="프로그램별 상이"/>
        <TextView
            android:id="@+id/detail_event_genre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/detail_event_cost_data"
            android:text="장르"/>
        <TextView
            android:id="@+id/detail_event_genre_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/detail_event_cost_data"
            app:layout_constraintStart_toStartOf="parent"
            android:text="축제"/>

        <TextView
            android:id="@+id/detail_event_kind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detail_event_genre_data"
            android:text="종류"/>
        <TextView
            android:id="@+id/detail_event_kind_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/detail_event_genre_data"
            app:layout_constraintStart_toStartOf="parent"
            android:text="음악"/>

        <TextView
            android:id="@+id/detail_event_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detail_event_kind_data"
            android:text="테마"/>
        <TextView
            android:id="@+id/detail_event_theme_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/detail_event_kind_data"
            app:layout_constraintStart_toStartOf="parent"
            android:text="감동"/>

        <TextView
            android:id="@+id/detail_event_homepage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detail_event_theme_data"
            android:text="홈페이지"/>
        <TextView
            android:id="@+id/detail_event_homepage_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/detail_event_theme_data"
            app:layout_constraintStart_toStartOf="parent"
            android:text="https://"/>
        <TextView
            android:id="@+id/detail_event_introduce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detail_event_homepage_data"
            android:text="행사 소개"/>
        <TextView
            android:id="@+id/detail_event_introduce_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/detail_event_introduce"
            android:text="2015년부터 봄 햇살과 함께 찾아오는 궁중문화 축전.\n2022년에도 우리 궁궐을 더욱 깊이 보고 느낄 수 있는 프로그램으로 준비했습니다.\n\n"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>